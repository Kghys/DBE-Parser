<Window x:Class="DBE_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBE_Parser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="btnOpenFile" Click="btnOpenFile_Click" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="18" >OPEN FILE</Button>
        <Button Name="btnConvertFile" Click="btnConvertFile_Click" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" Background="#FF88D5EC" Foreground="White" FontSize="18" >CONVERT FILE</Button>
        <Button Name="btnExitFile" Click="btnExitFile_Click" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" FontSize="18" Background="#FFFF8383" >EXIT FILE</Button>
        <TextBox Name="txtEditor" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="5" />
    </Grid>
</Window>
